### useful alias ###

# bash
alias bashrc='. ~/.bashrc'
alias bash_profile='. ~/.bash_profile'

# zsh
alias zshrc='. ~/.zshrc'
alias zshenv='. ~/.zshenv'
alias hide-rprompt="setopt transient_rprompt"
alias show-rprompt="unsetopt transient_rprompt"

# env
alias en='LANG=en_US.UTF-8'
alias ja='LANG=ja_JP.UTF-8'

# build in commands
alias cd..='cd ..'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias kill1='kill -9 %1'
alias kill2='kill -9 %2'
alias kill3='kill -9 %3'
alias kill4='kill -9 %4'
alias kill5='kill -9 %5'

# basic commands
alias ls='ls -F'
alias la='ls -A'
alias l.='\ls -d .*'
alias ll='ls -l'
alias lal='la -l'
alias lla='ll -A'
alias fd='find . -type d -not -path "*/\.*" -name'
alias ff='find . -type f -not -path "*/\.*" -name'
alias chx='chmod 755'
alias chr='chmod 644'
alias make4='make -j 4'

# external commands
alias python='python3'
alias server='python3 -m http.server &>/dev/null &; printf "localhost:8000\n"'
alias server2='python2 -m SimpleHTTPServer &>/dev/null &; printf "localhost:8000\n"'
alias pip='pip3'
alias pip-update="pip freeze --local | grep -v '^\-e' | cut -d = -f 1 | xargs -I{} pip install -U {} || true"
alias tree='tree -F'
alias tree1='tree -L 1'
alias tree2='tree -L 2'
alias tree3='tree -L 3'
alias tree4='tree -L 4'
alias tree5='tree -L 5'
alias gitlog='git log --graph --oneline --all --decorate'
alias gitlogd="git log --graph --pretty=format:'%C(yellow)%h%Creset%C(red)%d%Creset %s %Cgreen(%cr)' --abbrev-commit"
alias gitlogp="gitlogd -p"
alias npmls='npm ls --depth 0'
alias npmlist='npm ls --depth 0'
alias npms='npm start'
alias npmt='npm test'
alias npmb='npm run build'

# vim
alias bf="cat > ~/.vim/bf"
alias bfcat="cat ~/.vim/bf"
